#include<iostream>
using std::cout;
using std::cin;

int main(){
	long a,b(0);
	cin >> a;
	for(int i(1);i<=a;i++)
	{
		long c;
		cin >> c;
		if(i%2==0)
		{
			b-=c;
		}
		else
		{
			b+=c;
		}

	}
			if(b<0)
		{
			b=(b*-1)+1;
		}
			else if(b==0)
			{
				b=1;
			}
			else
			{
				b=0;
			}
		cout << b;
	return 0;
}