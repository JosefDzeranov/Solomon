#include <iostream>
#include <math.h>

using namespace std;

int main()
{int a[4], i, n;
for(i=1;i<=4;i++)
    cin>>a[i];
if(a[1]==a[2])
{
    if(a[3]==a[4])
        n=a[1]+a[3];
    if(a[3]>a[4])
        n=a[1]+a[4];
    if(a[3]<a[4])
        n=a[1]+a[3];
}
if(a[1]<a[2])
{
    if(a[3]==a[4])
        n=a[1]+a[3];
    if(a[3]>a[4])
        n=a[1]+a[4];
    if(a[3]<a[4])
        n=a[1]+a[3];
}
if(a[1]>a[2])
{
    if(a[3]==a[4])
        n=a[2]+a[3];
    if(a[3]>a[4])
        n=a[2]+a[4];
    if(a[3]<a[4])
        n=a[2]+a[3];
}
n=sqrt(n);
cout<<n;
return 0;
}
