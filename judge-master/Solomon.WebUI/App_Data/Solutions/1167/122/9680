#include<iostream>
#include<cmath>
using namespace std;
main()
{
      int N,A[1000],i,k=0; 
      cin>>N;
      for(i=1;i<=N;i++)
      cin >> A[i];
      k=A[1];
      for(i=2;i<=N;i++)
      {
      if (A[i]==A[i-1])
      {
      A[i]=A[i]+1;
      k=k+A[i];
      }
      else k=k+A[i];
      }
      
cout << k;
     

      }
      
