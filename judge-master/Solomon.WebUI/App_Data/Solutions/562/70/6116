Imports System
Imports Microsoft.VisualBasic

Module Module1
    Dim n As ULong
    Dim a() As ULong
    Dim m As ULong
    Dim c() As ULong
    Dim b() As ULong
    Dim minc As ULong
    Dim otv As ULong

    Sub Main()
        Dim i As ULong
        Dim j As ULong
        n = Console.ReadLine
        ReDim a(n)
        Dim a1() As String = Split(Console.ReadLine)
        For i = 1 To n
            a(i) = Val(a1(i - 1))
        Next
        m = Console.ReadLine
        ReDim b(m)
        ReDim c(m)
        For i = 1 To m
            Dim bc() As String = Split(Console.ReadLine)
            b(i) = Val(bc(0))
            c(i) = Val(bc(1))
        Next
        For i = 1 To n
            minc = 1000000000000000000
            For j = 1 To m
                If b(j) >= a(i) And c(j) <= minc Then
                    minc = c(j)
                End If
            Next
            otv = otv + minc
        Next
        Console.WriteLine(otv)
        Console.ReadLine()
    End Sub

End Module
