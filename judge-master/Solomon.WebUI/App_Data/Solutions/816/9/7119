program ideone;
var a,b,c,n,ch:integer;
begin
readln(ch);
readln(n,a,b,c);
if ch=2 then begin
	if (a<=b) and (a<=c) then writeln(a)
	else
	if (b<=a) and (b<=c) then writeln(b)
	else
	writeln(c);
end;
if ch=1 then begin
	if (a>=b) and (a>=c) then writeln(abs(b+c-a))
	else
	if (b>=a) and (b>=c) then writeln(abs(a+c-b))
	else
	writeln(abs(b+a-c));
end;
end.