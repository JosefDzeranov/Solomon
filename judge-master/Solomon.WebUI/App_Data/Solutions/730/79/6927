#include <iostream>

using namespace std;

int A[100];

int main()
{

    int n, b = 0, c, i, s = 0;
    cin >> n;
    //cin >> A;
    while (n >= 3)
    {
        if (n == 3)
        {
            b += 5;
        }
        b += 1;
        b += n*n;
        s = n*(n*n + 1) / 2;
        n -= 2;


    }
    cout << b;
    return 0;
}
