#include <iostream>

using namespace std;

int main()
{
    int n;
    cin >> n;
    int a = n / 3;
    int b = n / 3;
    int c = n / 3;

    if (n % 3 == 0)
        a--, c++;

    else if (n % 3 == 1)
        a--, c += 2;

    else
        a--, b++, c += 2;

    cout << a << " " << b << " " << c;

    return 0;
}
