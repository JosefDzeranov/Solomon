#include <iostream>

using namespace std;

int main()
{
	int num_of_ing;
	int sum_F = 0;
	cin >> num_of_ing;
	for (int i = 0; i < num_of_ing; i++)
	{
		int F_of_ing;
		cin >> F_of_ing;
		if (i % 2 == 0)
			sum_F += F_of_ing;

		else
			sum_F -= F_of_ing;
	}

	if (sum_F > 0)
		cout << 0;

	else 
		cout << 1 - sum_F;

	return 0;
}
