#include<iostream>
using namespace std;
int main(){
	int n,a[50000],m,b[50000],c[50000],i,j,min,max,s;
	cin>>n;
	for(i=1;i<=n;i++)
		cin>>a[i];

	max=0;
	cin>>m;
	for(j=1;j<=m;j++)
	{
		cin>>b[j]>>c[j];
		if(c[j]>max)max=c[j];
	}

	s=0;

	for(i=1;i<=n;i++)
	{
		min=max;
		for(j=1;j<=m;j++)
		if(a[i]<=b[j] && min>c[j])min=c[j];

		s+=min;
	}
		cout<<s;
	return 0;
}