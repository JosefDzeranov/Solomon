//9 13 21 23 35 64

#include <stdio.h>
#include <iostream>
#include <conio.h>
#include <vector>

using namespace std;

void out(int* mass, int num) {
    for(int i=0; i<num; i++) {
        cout << mass[i] << " ";
    }
    cout << endl << endl;
}

int main() {
    int n, sum=0;
    cin >> n;
    vector<int> cost(n);
   	for(int i=0; i<n; i++) {
        cin >> cost[i];
        sum+=cost[i];
    }
	int max=sum/2;
    vector<vector<int> > mass(max + 1, vector<int>(n+1, 0)); //создаем массив размером [max+1][n+1] заполненный нулями
    for (int j = 1; j <= n; j++)
    {
        for (int w = 1; w <= max; w++)
        {
            if (cost[j-1] <= w)
            {
                mass[w][j] = std::max(mass[w][j - 1], mass[w - cost[j-1]][j - 1] + cost[j-1]);
            }
            else
            {
                mass[w][j] = mass[w][j - 1];
            }
        }
    }
    int result=sum-2*mass[max][n];
    cout << result;
    return 0;
}
