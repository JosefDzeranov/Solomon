program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;
var n,i,sum:integer; s:array [1..1000000] of integer;
begin

  readln(n);
  for I := 1 to n do
  read(s[i]);

  sum:=0;

  for I := 1 to n do
   if i mod 2=0 then sum:=sum-s[i]
   else sum:=sum+s[i];

  if sum>0 then i:=0
  else i:=0-sum+1;

  writeln(i);
  readln;
  readln;
end.
