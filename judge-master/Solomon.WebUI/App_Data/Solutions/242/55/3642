using System;
using System.Collections.Generic;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine(4 * n * n + 1 + (2 * n - 1) * ((2 * n - 1) * (2 * n - 1) + 1));
        }
    }
}
