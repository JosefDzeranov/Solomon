#include <iostream>
#include <string>

using namespace std;


int main()
{
    string s;
    int a;
    cin>>a;
    while (a>2)
    {
        if (a%2==0)
            {
                s="*"+s;
                a=a/2;
            }
        else
            {
                s="+"+s;
                a=a-1;
            }
    }
    s="*"+s;
    cout<<s;
    return 0;
}
