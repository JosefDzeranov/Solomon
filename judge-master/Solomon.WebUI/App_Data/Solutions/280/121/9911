#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
int main()
{
    int m,n,k,t,i=1;
    setlocale (LC_CTYPE,"RUSSIAN");
    printf("\n¬ведите N");
    scanf("%d",&n);
    printf("\n¬ведите M");
    scanf("%d",&m);
    t=n*n;
    while(t>m)
    {
        k=i*i;
        t=(n*n)-k;
        i++;
        if(t==m)
        {
            printf("Yes");
        }
    }
    if(t!=m && t<m)
    {
        printf("No");
    }

    return 0;
}

