program Project2;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
  n,a, s,i,q: integer;

begin
  { TODO -oUser -cConsole Main : Insert code here }
   read(n);
   q:=0;
   for i:=0 to n-1 do
   begin
   read(a);
   if i mod 2<> 0 then a:=a*(-1);
   s:=s+a;
   end;

  Writeln;
  if s<0 then q:=1-s;
  write(q);

   Readln;
   Readln;

end.
 