using System;


namespace Balaev
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Введите натуральное число не > 1000000: ");
				int I=0;
                int N = int.Parse(Console.ReadLine());
                int n = 0;
                while (n<N)
                {
                    n+=I; 
					I++;                    
                }
                Console.WriteLine(I);  
            
           

        }
    }
}
