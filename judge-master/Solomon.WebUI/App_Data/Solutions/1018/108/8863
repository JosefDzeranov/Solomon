#include <iostream>

using namespace std;

int main()
{
    int i, sum = 0, n, num;
    cin >> n;
    for (i = 0; i < n; i++) {
        cin >> num;
        if (i % 2 == 0) sum += num;
        else    sum -= num;
    }
    if (sum < 1)
        cout << 1 - sum;
    else
        cout << 0;
    return 0;
}
