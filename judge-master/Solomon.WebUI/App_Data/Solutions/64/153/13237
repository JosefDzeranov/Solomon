#include <iostream>
#include <cmath>
#include <string>
#include <vector>

using namespace std;

int mas[1005][1005];

int main()
{
	int n, m, k;
	cin >> n >> m >> k;
	for (int i = 0; i < n; i++)
	for (int j = 0; j < m; j++)
		mas[i][j] = 0;
	for (int i = 0; i < k; i++)
	{
		int a, b;
		cin >> a >> b;
		mas[a - 1][b - 1] = 2;
	}
	int used = k;
	int sec = 0;
	while (used < m * n)
	{
		sec++;
		for (int i = 0; i < n; i++)
		for (int j = 0; j < m; j++)
		{
			if (used == m * n)
				break;
			if (mas[i][j] == 2)
			{
				mas[i][j] = 3;
				if (i + 1 < n && mas[i + 1][j] == 0)
				{
					mas[i + 1][j] = 1;
					used++;
				}
				if (j + 1 < m && mas[i][j + 1] == 0)
				{
					mas[i][j + 1] = 1;
					used++;
				}
				if (i - 1 >= 0 && mas[i - 1][j] == 0)
				{
					mas[i - 1][j] = 1;
					used++;
				}
				if (j - 1 >= 0 && mas[i][j - 1] == 0)
				{
					mas[i][j - 1] = 1;
					used++;
				}
			}
		}
		for (int i = 0; i < n; i++)
		for (int j = 0; j < m; j++)
		{
			if (mas[i][j] == 1)
				mas[i][j] = 2;
		}
	}

	cout << sec;
	return 0;
}