# include<iostream>
# include<string>
using namespace std;
int main()
{
	int b;
	b=0;
	int a;
	cin>>a;
	string s;
	string d;
	bool f= true;
	for (int i =0; i<a;i++)
	{
	 cin>>s;
	 if ((s[s.length()-3]== d[0]) && (s[s.length()-2] == d[1]) &&(s[s.length()-1]== d[2]))
		 if (f=false)
		 {
           d=d+s;
		 b++;
		 }
		 if (f=true)
		 {
			 d=s;
			 f=false;
		 }
	}
	cout<<b<<' '<<d.length();
	int z;
	cin>>z;
	return 0;
}