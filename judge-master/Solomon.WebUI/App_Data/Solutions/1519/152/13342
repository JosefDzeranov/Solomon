# include<iostream>
# include<string>
using namespace std;
int main()
{
	int b;
	b=0;
	int a;
	cin>>a;
	string n;
	string d;
	bool f= true;
	for (int i =0; i<a;i++)
	{
		cin>>n;
		if ((n[n.length()-3]== d[0]) && (n[n.length()-2] == d[1]) &&(n[n.length()-1]== d[2])|| (d[d.length()-3]== n[0]) && (d[d.length()-2] == n[1]) &&(d[d.length()-1]== n[2]))
		 if (f==false)
		 {
			 d+=n;
		 b++;
		 }
		  if (f==true)
		 {
			 d=n;
			 f=false;
		 }
	}
	cout<<b+1<<' '<<d.length();
	int z;
	cin>>z;
	return 0;
}