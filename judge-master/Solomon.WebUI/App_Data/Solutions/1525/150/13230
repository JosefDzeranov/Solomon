using System;
using System.Collections.Generic;
using System.Text;

namespace Zadacha1Olimpiada
{
    class Program
    {
        static void Main(string[] args)
        {

            string line = Console.ReadLine();

            while (line.IndexOf(".") >= 0)
            {
                line = line.Replace(".", "0");
            }
            while (line.IndexOf("*") >= 0)
            {
                line = line.Replace("*", "1");
            }
            int endResult = Convert.ToInt32(line , 2);
            Console.WriteLine(endResult);
  
        }
    }
}
