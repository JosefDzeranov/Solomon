var n, k, d, i: longint;
   summ, s:Qword;
begin
      readln(n);
      d:=((2*n)-1)*((2*n)-1);
      s:=0;
      for i:=1 to d do
        s:=s+i;
      k:=(2*n)-1;
      summ:=(s div k)*2;
      s:=0;
      d:=(2*n)*(2*n);
      for i:=1 to d do
        s:=s+i;
      s:=s div (n*n*2);
      summ:=summ+s;
      writeln(summ);
      readln(i);;
end.