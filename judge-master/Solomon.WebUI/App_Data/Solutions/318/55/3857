using namespace std;

typedef long long ll;
typedef pair <int, int> pii;

int main(){
    //freopen("input.txt", "r", stdin);
    //freopen("output.txt", "w", stdout);
    int n, N;
    cin>>N;
    n=N*2;
    int s1=n*n, s2=(n-1)*(n-1);
    long long x=(1ll*s1*(s1+1)/2)/n;
    long long y=(1ll*s2*(s2+1)/2)/(n-1);
    cout<<2*y+x/N;
    return 0;
}
