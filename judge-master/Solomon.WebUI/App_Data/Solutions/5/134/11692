using System;
using System.Text;


namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            int sum=0;
            sum += (1 + n - 1) * (n - 1) / 2;
            if (n % 2 == 0) sum-= (n/2);
            sum *= 2;
            Console.WriteLine(sum);
        }
    }
}
