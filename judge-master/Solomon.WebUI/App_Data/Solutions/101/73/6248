using System;
using System.Collections.Generic;
using System.Text;

namespace futball
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            int i = 0;
            while (n != 0)
            {
                i++;
                n -= i;
               
            }
            Console.WriteLine(i);
        }
    }
}
