using System;
using System.Collections.Generic;
using System.Text;
namespace zad4_of7_8
{
    class Program
    {
        static void Main(string[] args)
        {


            int n = Convert.ToInt32(Console.ReadLine());
            string s = Console.ReadLine();
            if (s.Length < 11)
            {
                Console.WriteLine(s);
            }
            else
            {
                string t = s[0].ToString() + (s.Length - 2) + s[s.Length - 1].ToString();
                Console.WriteLine(t);
            }

        }
    }
}
