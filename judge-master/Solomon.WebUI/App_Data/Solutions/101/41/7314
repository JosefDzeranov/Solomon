using System;
using System.Collections.Generic;
using System.Text;

namespace Двоечник_2
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            string s ="";
            while (n != 1)
            {
                if (n % 2 == 1) { s = "+" + s; n = n - 1; }
                else { s = "*" + s; n = n / 2; } 
            }
            Console.WriteLine(s);
        }
    }
}
