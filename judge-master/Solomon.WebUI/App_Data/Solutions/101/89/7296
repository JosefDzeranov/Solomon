using System;
using System.Collections.Generic;
using System.Text;

namespace C
{
    class Program
    {
        static void Main(string[] args)
        {
            string s = Console.ReadLine();
            string[] ss = s.Split(' ');
            int x = Convert.ToInt32(ss[0]);
            int y = Convert.ToInt32(ss[1]);
            int t1 = Convert.ToInt32(ss[2]);
            int t2 = Convert.ToInt32(ss[3]);
            Console.WriteLine(x*y*t2+(x-1)*t1);


        }
    }
}
