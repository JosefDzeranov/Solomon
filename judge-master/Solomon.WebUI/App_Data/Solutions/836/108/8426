program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var a :array[0..1000000] of integer;
n,i,sum:integer;
begin
sum:=0;
readln (n);
for I := 0 to n-1 do
read(a[i]);
for I := 0 to n - 1 do
     begin
       if i mod 2=0 then  sum:=sum+a[i]
    else sum:=sum-a[i];
     end;
     if sum<=0 then sum:=1-sum
     else sum:=0;

writeln(sum);
readln;
readln;
  end.
