program Salve;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
  N, i, S, ing : integer;
begin
  readln (N);
  S := 0;
  for i := 1 to N do
  begin
    read (ing);
    if i mod 2 <> 0 then
      S := S + ing
    else
      S := S - ing;
  end;
  if s <= 0 then
    write (s * (-1) + 1)
  else
    write (0);
  readln;
end.
