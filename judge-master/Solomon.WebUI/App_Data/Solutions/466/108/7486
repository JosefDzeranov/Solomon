#include <iostream>
using namespace std;
#include <vector>
int main()
{
	int n ;
	int a ;
	int sum1=0;
	int sum2=0;
	 cin>> n;
	 for( int i =0; i<n; i++)
	 {
	 cin >>a;
	 if (i%2==0)sum1 +=a;
	 else sum2 +=a;
	 }
	 if (sum1 > sum2) cout<<0;
            else
                if (sum1 == sum2) cout<<1;
                else
                  cout<< sum2 - sum1 + 1;

	return 0;

}