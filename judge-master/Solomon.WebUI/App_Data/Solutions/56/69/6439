program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
  a,x,b,k:longint;
  t,v,t1,t2,d:double;
begin
  readln(a,b,x);
  t:=x/1000;
  k:=a+b;
  t1:=t-trunc(t/k)*k;
  t2:=(t+a)-trunc((t+a)/k)*k;
  //writeln(t1,' ',t2);
  v:=0;
  d:=0;
  if (t1<=a) or (t2<=a) then
    begin
    v:=1000
    end
    else
    begin
      d:=k-t2;
      v:=x/(d+t);
    end;
     writeln(v:0:9);
     readln;
end.
