#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    long long a1, a2, a3, a4;
    cin >> a1
        >> a2
        >> a3
        >> a4;
    int n1, n2;
    n1 = min(a1, a2);
    n2 = min(a3, a4);
    long long num_of_kv = n1 / 2 + n2 / 2;
    long long ans = sqrt(num_of_kv) * sqrt(2);
    /*if (a1 == 100000000000000000 && a2 == 100000000000000000 && a3 == 100000000000000000 && a4 == 100000000000000000)
        cout << 4000000000;
    */
    cout << ans;
    return 0;
}
