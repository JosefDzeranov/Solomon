var n,i,j,min:longint;
f,a:array[0..20000000]of longint;
begin
   readln(n);
   for i:=1 to n do
    read(a[i]);

   f[0]:=1;
   for i:=1 to n do
    for j:=20000000 downto 0 do
     if f[j]=1 then f[j+a[i]]:=1;

  min:=maxlongint;
  for i:=1 to 10000 do
   for j:=0 to i-1 do
    if (f[i]=1)and(f[j]=1)and(abs(i-j)<min) then min:=abs(i-j);

  writeln(min);
end.
