var n,i,j,min:longint;
a,f:array[0..100]of longint;
begin
   readln(n);
   for i:=1 to n do
    read(a[i]);
 //  su:=0;
 //  for i:=1 to n do
//    su:=su+a[i];
   f[0]:=1;
   for i:=0 to n do
    for j:=2000000000 downto 0 do
     if f[j]=1 then f[j+a[i]]:=1;
     min:=maxlongint;
  for i:=1 to 100 do
   for j:=1 to i-1 do
    if (f[i]=1)and(f[j]=1)and(abs(i-j)<min) then min:=abs(i-j);
  writeln(min);
end.