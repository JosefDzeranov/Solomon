// D.cpp: определяет точку входа для консольного приложения.
//
//#include "stdafx.h"
#include <iostream>
#include <math.h>

using namespace std;

int main()
{
	int c[100], v[100], d[100];

	int i, j, n, s1, s2, sv = 0, s = 0, sr, min;
	cin >> n;

	for (i = 0; i < n; i++)
		cin >> c[i];
	for (i = 0; i < n; i++)
	{
		s = s + c[i];
		v[i] = 0;
	}
	min = s;
	sr = s / 2;
	i = n - 1;
	while (i >= 0)
	{
		i = n - 1;
		while (i >= 0 && v[i] == 1)
		{
			v[i] = 0;
			sv = sv - c[i];
			i--;
		}
		if (i >= 0)
		{
			v[i] = 1;
			sv = sv + c[i];
			if (abs(sr - sv) < min)
			{
				min = abs(sr - sv);
				for (j = 0; j < n; j++)
					d[j] = v[j];
				s1 = sv;
			}
		}
	}

	s1 = s2 = 0;

	for (i = 0; i < n; i++)
	{
		if (d[i] == 1) s1 = s1 +c[i];
		if (d[i] == 0) s2 = s2 +c[i];
	}

	cout << abs(s1-s2);

	//cin >> n;
	return 0;
}
