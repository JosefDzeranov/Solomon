uses crt;
label d;
var n,i,m1,m2,s,k,a,c: integer;
begin
clrscr;
c:=1;
d:
writeln ('Введи число');readln (n);
if (n mod 2<>0) or (n<1) or (n>1000) then goto d;
a:=n;
while a mod 2=0 do
begin
a:=a div 2;
k:=k+1;
end;
k:=k-1;
n:= n*2;
m1:= (n*(n*n+1)) div 2;
n:=n-1;
m2:=(n*(n*n+1)) div 2;
while k>0 do
begin
c:=c*10;
k:=k-1;
end;
s:=(m1+m2)-2*c;
writeln (s)
end.
