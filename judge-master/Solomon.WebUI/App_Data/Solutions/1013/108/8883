#include <iostream>

using namespace std;

int main()
{
    int a,r=0,c=0;
    cin>>a;
    int x[a];
    for ( int i =0; i < a; i ++)
        {
            cin>>x[i];
        }
    for (int i = 0 ; i < a; i= i+2)
        {
            r=x[i]+r;
        }
    for (int i = 1 ; i < a; i= i+2)
        {
            c=x[i]+c;
        }
        if (c-r<0)cout<<"0";
        else
    cout<<c-r+1;
    return 0;
}
