program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var x1,x2,x3,y1,y2,y3,a,b,c,d,e,f:integer;
begin
readln(x1,y1);
readln(x2,y2);
readln(x3,y3);
begin
a:=x3-x1;
b:=x2-x3;
end;

if a>b then c:=b else c:=a;
begin
 d:=y3-y1;
 f:=y2-y3;
end;
if d>f then e:=f else e:=d;
 begin
   if c>e then
   writeln(e)
   else writeln(c);
 end;
 readln;

end.
