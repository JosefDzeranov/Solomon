#include<iostream>
#include<cmath>
using namespace std;
main()
{
      int A[1000],i,j=0,N;
      cin>>N;
      for(i=0;i<N;i++)
      cin>>A[i];
      j=A[0];
      for(i=1;i<N;i++)
      {
                      for(;A[i]<=A[i-1];)
                      A[i]++;
                      j=j+A[i];
      }
      
cout<<j;
}
