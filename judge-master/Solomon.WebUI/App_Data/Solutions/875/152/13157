#include<iostream>

using namespace std;

int main(){
	unsigned short digit(0),digits[3]={0,0,0};
	cin >> digit;
	if(digit%3==0)
	{
		digits[0]=digit/3+1;
		digits[1]=digit/3;
		digits[2]=digit/3-1;
	}
	else{
		digits[0]=digit/3+2;
		digits[1]=digit/3+1;
		digits[2]=digit/3-1;
	}
	cout << digits[2] << ' ' << digits[1] << ' ' << digits[0];
	cin >> new char;
	return 0;
}