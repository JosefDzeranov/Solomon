#include <iostream>
#include <math.h>

using namespace std;

int main()
{
   int a,a1=0,a2=0,i;
   string b,b1,b2;
   cin>>a;
   b=" ";
   b1="*";
   b2="+";
   while (a>=2)
   {
       a1=a%2;
       if (a1==0)
       {
           a=a/2;
           b=b+b1;

       }
       else
   {
       a=a-1;b=b+b2;
   }
   a2=a2+1;
   }

   b=b+b1;
   b1="";
   for(i=a2;i>=1;i=i-1)
   {
       b1=b1+b[i];
   }
   cout<<b1;
    return 0;
}
