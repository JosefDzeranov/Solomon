program Project1;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var x,a,b,t : real;
var a1 : boolean;
begin
readln(a,b,x);
if(b * 1000 >= x) Then
begin
writeln(x / b);
end
else
while (t*1000 < x) do
begin
if(a1 = true) Then
begin
a1:= false;
t:= t + a;
end
else
begin
t:= t + b;
a1:= true;
end;
end;
writeln(x / t);
readln;
end.



