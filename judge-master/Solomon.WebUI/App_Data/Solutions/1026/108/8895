#include <iostream>

using namespace std;

int main()
{
    int n, i, a, sum = 0, ans = 0;
    cin >> n;
    for (i = 1; i <= n; ++i){
        cin >> a;
        if (i % 2 != 0)
        sum = sum + a;
        else
        sum = sum - a;

    }
    if (sum < 1)
        cout << 1 - sum;
    else cout << 0;
}
